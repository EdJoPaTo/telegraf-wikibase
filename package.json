{
	"name": "telegraf-wikibase",
	"version": "0.3.0",
	"description": "Telegraf Middleware to use Wikibase entities (like Wikidata ones) in your users language",
	"license": "MIT",
	"repository": "EdJoPaTo/telegraf-wikibase",
	"author": {
		"name": "EdJoPaTo",
		"email": "edjopato@gmail.com",
		"url": "edjopato.de"
	},
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"build": "del dist && tsc",
		"prepack": "npm run build",
		"test": "tsc && xo && nyc ava"
	},
	"main": "dist/source",
	"types": "dist/source",
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"keywords": [
		"telegraf",
		"wikibase",
		"wikidata"
	],
	"dependencies": {},
	"peerDependencies": {
		"telegraf": "^3.30.1",
		"wikidata-entity-reader": "^1.0.0",
		"wikidata-entity-store": "^1.0.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.4.0",
		"@types/node": "^12.0.2",
		"@typescript-eslint/eslint-plugin": "^2.3.1",
		"@typescript-eslint/parser": "^2.3.1",
		"ava": "^2.1.0",
		"del-cli": "^3.0.0",
		"eslint-config-xo-typescript": "^0.19.0",
		"nyc": "^14.1.1",
		"telegraf": "^3.30.1",
		"typescript": "^3.3.3",
		"wikidata-entity-reader": "^1.0.0",
		"wikidata-entity-store": "^1.0.0",
		"xo": "^0.25.3"
	},
	"ava": {
		"babel": false,
		"compileEnhancements": false
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"dist/source",
			"source"
		],
		"exclude": [
			"**/*.test.ts"
		],
		"all": true,
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"extends": "xo-typescript",
		"extensions": [
			"ts"
		],
		"rules": {
			"@typescript-eslint/camelcase": "off",
			"ava/no-ignored-test-files": "off"
		}
	}
}
