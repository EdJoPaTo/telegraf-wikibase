{
	"name": "telegraf-wikibase",
	"version": "0.12.0",
	"description": "Telegraf Middleware to use Wikibase entities (like Wikidata ones) in your users language",
	"keywords": [
		"telegraf",
		"grammy",
		"wikibase",
		"wikidata"
	],
	"license": "MIT",
	"repository": "EdJoPaTo/telegraf-wikibase",
	"author": {
		"name": "EdJoPaTo",
		"email": "telegraf-wikibase-npm-package@edjopato.de",
		"url": "https://edjopato.de"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"test": "tsc --sourceMap && xo && ava"
	},
	"type": "module",
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@edjopato/datastore": "^0.5.0",
		"array-filter-unique": "^3.0.2",
		"js-yaml": "^4.0.0",
		"tableize-object": "^0.1.0",
		"wikibase-types": "^0.4.0",
		"wikidata-entity-reader": "^3.0.0",
		"wikidata-sdk": "^8.1.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/js-yaml": "^4.0.0",
		"@types/node": "^18.11.18",
		"ava": "^5.0.1",
		"del-cli": "^5.0.0",
		"grammy": "^1.2.0",
		"telegraf": "^4.0.0",
		"typescript": "^4.2.3",
		"xo": "^0.53.0"
	},
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"main": "./dist/source/index.js",
	"types": "./dist/source/index.d.ts",
	"xo": {
		"rules": {
			"@typescript-eslint/naming-convention": "off",
			"@typescript-eslint/prefer-readonly-parameter-types": "warn",
			"ava/no-ignored-test-files": "off"
		},
		"overrides": [
			{
				"files": [
					"**/*.test.*",
					"test/**/*.*"
				],
				"rules": {
					"@typescript-eslint/no-empty-function": "off",
					"@typescript-eslint/prefer-readonly-parameter-types": "off"
				}
			}
		]
	}
}
