{
	"name": "telegraf-wikibase",
	"version": "0.10.1",
	"description": "Telegraf Middleware to use Wikibase entities (like Wikidata ones) in your users language",
	"keywords": [
		"telegraf",
		"wikibase",
		"wikidata"
	],
	"license": "MIT",
	"repository": "EdJoPaTo/telegraf-wikibase",
	"author": {
		"name": "EdJoPaTo",
		"email": "telegraf-wikibase-npm-package@edjopato.de",
		"url": "https://edjopato.de"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"test": "tsc --sourceMap && xo && nyc ava"
	},
	"type": "commonjs",
	"engines": {
		"node": ">=12"
	},
	"dependencies": {
		"@edjopato/datastore": "^0.3.0",
		"js-yaml": "^4.0.0",
		"tableize-object": "^0.1.0",
		"wikibase-types": "^0.2.1",
		"wikidata-entity-reader": "^2.0.0",
		"wikidata-sdk-got": "^2.1.0"
	},
	"peerDependencies": {
		"telegraf": "^3.38.0 || ^4.0.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^1.0.2",
		"@types/js-yaml": "^4.0.0",
		"@types/node": "^15.0.1",
		"ava": "^3.8.2",
		"del-cli": "^4.0.0",
		"nyc": "^15.0.1",
		"telegraf": "^4.0.0",
		"typescript": "^4.2.3",
		"xo": "^0.41.0"
	},
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"main": "dist/source",
	"types": "dist/source",
	"nyc": {
		"all": true,
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"rules": {
			"@typescript-eslint/no-unsafe-assignment": "off",
			"@typescript-eslint/no-unsafe-call": "off",
			"@typescript-eslint/prefer-readonly-parameter-types": "error",
			"ava/no-ignored-test-files": "off"
		},
		"overrides": [
			{
				"files": [
					"**/*.test.*",
					"test/**/*.*"
				],
				"rules": {
					"@typescript-eslint/no-unsafe-member-access": "off",
					"@typescript-eslint/no-unsafe-return": "off",
					"@typescript-eslint/prefer-readonly-parameter-types": "off"
				}
			}
		]
	}
}
