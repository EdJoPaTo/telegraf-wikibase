{
	"name": "telegraf-wikibase",
	"version": "0.9.1",
	"description": "Telegraf Middleware to use Wikibase entities (like Wikidata ones) in your users language",
	"license": "MIT",
	"repository": "EdJoPaTo/telegraf-wikibase",
	"author": {
		"name": "EdJoPaTo",
		"email": "telegraf-wikibase-npm-package@edjopato.de",
		"url": "https://edjopato.de"
	},
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"build": "del dist && tsc",
		"prepack": "npm run build",
		"test": "tsc --sourceMap && xo && nyc ava"
	},
	"main": "dist/source",
	"types": "dist/source",
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"keywords": [
		"telegraf",
		"wikibase",
		"wikidata"
	],
	"dependencies": {
		"@edjopato/datastore": "^0.3.0",
		"wikibase-types": "^0.2.1",
		"wikidata-entity-reader": "^2.0.0",
		"wikidata-sdk-got": "^2.0.1",
		"yaml-to-object-path-record": "^0.1.0"
	},
	"peerDependencies": {
		"telegraf": "^3.38.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/node": "^14.0.5",
		"ava": "^3.8.2",
		"del-cli": "^3.0.0",
		"nyc": "^15.0.1",
		"telegraf": "^3.38.0",
		"typescript": "^4.0.2",
		"xo": "^0.33.0"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"dist/source",
			"source"
		],
		"exclude": [
			"**/*.test.ts"
		],
		"all": true,
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"rules": {
			"@typescript-eslint/prefer-readonly-parameter-types": "error",
			"ava/no-ignored-test-files": "off"
		}
	}
}
